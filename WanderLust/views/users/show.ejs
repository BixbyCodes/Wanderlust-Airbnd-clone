<%- layout("./layouts/boilerplate.ejs") %>
<div class="d-flex justify-content-between align-items-center">
  <h3><%= user.username %></h3>
  <% if (currentUser && String(currentUser._id) === String(user._id)) { %>
    <a class="btn btn-dark" href="/users/<%= user._id %>/edit">Edit Profile</a>
  <% } %>
  </div>

<p class="text-muted"><%= user.email %></p>

<hr />

<h5>Listings by <%= user.username %></h5>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% listings.forEach(function(listing){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img src="<%= listing.image %>" class="card-img-top" style="height:14rem" />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
          </p>
        </div>
      </div>
    </a>
  <% }) %>
  <% if (!listings.length) { %>
    <p>No listings yet.</p>
  <% } %>
</div>

<hr />

<h5>Reviews by <%= user.username %></h5>
<div class="row g-3">
  <% reviews.forEach(function(review){ %>
    <div class="col-md-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>
        </div>
      </div>
    </div>
  <% }) %>
  <% if (!reviews.length) { %>
    <p>No reviews yet.</p>
  <% } %>
</div>


