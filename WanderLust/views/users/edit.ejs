<%- layout("./layouts/boilerplate.ejs") %>
<h3>Edit Profile</h3>
<form action="/users/<%= user._id %>?_method=PUT" method="POST" class="col-6">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" name="username" class="form-control" required value="<%= user.username %>"/>
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" id="email" name="email" class="form-control" required value="<%= user.email %>"/>
  </div>
  <button class="btn btn-brand" type="submit">Save Changes</button>
</form>


